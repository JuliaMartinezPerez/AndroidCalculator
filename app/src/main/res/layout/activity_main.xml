<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#8A8A8A"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="335dp"
        android:layout_height="212dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#2B2D30"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txt_finalNumber"
            android:layout_width="323dp"
            android:layout_height="96dp"
            android:backgroundTint="#838383"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_previousNumber"
            android:layout_width="321dp"
            android:layout_height="87dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_finalNumber"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="373dp"
        android:layout_height="362dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_C"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:onClick="click_C"
            android:text="C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_Del"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:onClick="click_del"
            android:text="Del"
            app:layout_constraintStart_toEndOf="@+id/btn_C"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_percentage"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginStart="17dp"
            android:onClick="click_percentage"
            android:text="%"
            app:layout_constraintStart_toEndOf="@+id/btn_Del"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_division"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:onClick="click_divide"
            android:text="/"
            app:layout_constraintStart_toEndOf="@+id/btn_tan"
            app:layout_constraintTop_toBottomOf="@+id/btn_percentage" />

        <Button
            android:id="@+id/btn_sin"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:onClick="click_sin"
            android:text="sin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_C" />

        <Button
            android:id="@+id/btn_cos"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:onClick="click_cos"
            android:text="cos"
            app:layout_constraintStart_toEndOf="@+id/btn_sin"
            app:layout_constraintTop_toBottomOf="@+id/btn_Del" />

        <Button
            android:id="@+id/btn_tan"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="5dp"
            android:onClick="click_tan"
            android:text="tan"
            app:layout_constraintStart_toEndOf="@+id/btn_cos"
            app:layout_constraintTop_toBottomOf="@+id/btn_Del" />

        <Button
            android:id="@+id/btn_multiplication"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:onClick="click_multiply"
            android:text="x"
            app:layout_constraintStart_toEndOf="@+id/btn_3"
            app:layout_constraintTop_toBottomOf="@+id/btn_division" />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginTop="120dp"
            android:onClick="click_1"
            android:text="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:onClick="click_2"
            android:text="2"
            app:layout_constraintStart_toEndOf="@+id/btn_1"
            app:layout_constraintTop_toBottomOf="@+id/btn_cos" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="5dp"
            android:onClick="click_3"
            android:text="3"
            app:layout_constraintStart_toEndOf="@+id/btn_2"
            app:layout_constraintTop_toBottomOf="@+id/btn_tan" />

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:onClick="click_minus"
            android:text="-"
            app:layout_constraintStart_toEndOf="@+id/btn_6"
            app:layout_constraintTop_toBottomOf="@+id/btn_multiplication" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginTop="180dp"
            android:onClick="click_4"
            android:text="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:onClick="click_5"
            android:text="5"
            app:layout_constraintStart_toEndOf="@+id/btn_4"
            app:layout_constraintTop_toBottomOf="@+id/btn_2" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="5dp"
            android:onClick="click_6"
            android:text="6"
            app:layout_constraintStart_toEndOf="@+id/btn_5"
            app:layout_constraintTop_toBottomOf="@+id/btn_3" />

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:onClick="click_plus"
            android:text="+"
            app:layout_constraintStart_toEndOf="@+id/btn_9"
            app:layout_constraintTop_toBottomOf="@+id/btn_minus" />

        <Button
            android:id="@+id/btn_7"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginTop="240dp"
            android:onClick="click_7"
            android:text="7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:onClick="click_8"
            android:text="8"
            app:layout_constraintStart_toEndOf="@+id/btn_7"
            app:layout_constraintTop_toBottomOf="@+id/btn_5" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="5dp"
            android:onClick="click_9"
            android:text="9"
            app:layout_constraintStart_toEndOf="@+id/btn_8"
            app:layout_constraintTop_toBottomOf="@+id/btn_6" />

        <Button
            android:id="@+id/btn_equals"
            android:layout_width="172dp"
            android:layout_height="55dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="5dp"
            android:onClick="equalsTo"
            android:text="="
            app:layout_constraintStart_toEndOf="@+id/btn_0"
            app:layout_constraintTop_toBottomOf="@+id/btn_plus" />

        <Button
            android:id="@+id/btn_comma"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:onClick="click_comma"
            android:text=","
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_7" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:onClick="click_0"
            android:text="0"
            app:layout_constraintStart_toEndOf="@+id/btn_comma"
            app:layout_constraintTop_toBottomOf="@+id/btn_8" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="344dp"
        android:layout_height="92dp"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:text="Android Calculator"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>